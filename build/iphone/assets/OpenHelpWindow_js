var b2=Titanium.UI.createButton({title:"Open (Nav Bar Covered)",width:200,height:40,top:60}),b3=Titanium.UI.createButton({title:"Traditional Modal",width:200,height:40,top:110}),SiWriter_help_win=Titanium.UI.createWebView({backgroundColor:"#FFF",url:"help.html",width:"100%",height:"100%",bottom:0,zIndex:0});b3.addEventListener("click",function(){var e=require("help_win"),t=new e({title:"Modal Window"}),i=Titanium.UI.createButton({title:"Close"});t.title="Modal Window",t.barColor="black",t.add(i),t.add(SiWriter_help_win),i.addEventListener("click",function(){t.close()}),t.open({modal:!0})}),b2.addEventListener("click",function(){var e={backgroundColor:"#336699",bottom:0,right:0};e.height=0,e.width=0;var t=Titanium.UI.createWindow(e),i=Titanium.UI.createAnimation();isIOS?(i.height=Ti.UI.FILL,i.width=Ti.UI.FILL):(i.height=Titanium.Platform.displayCaps.platformHeight,i.width=Titanium.Platform.displayCaps.platformWidth),i.duration=300;var a=Titanium.UI.createButton({title:"Close",height:30,width:150});t.add(a),a.addEventListener("click",function(){i.height=0,i.width=0,t.close(i)}),t.add(SiWriter_help_win),t.open(i)});