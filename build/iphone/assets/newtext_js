Ti.App.addEventListener("webviewEvent",function(e){"\b_"==e.text?(e.text="",contentTyped=contentTyped.slice(0,-1),txtViewDesc.value=contentTyped+""):(contentTyped.length!=txtViewDesc.value.length&&(contentTyped=txtViewDesc.value),contentTyped+=e.text,e.text="",Titanium.App.keyboardVisible||(txtViewDesc.value=contentTyped+"")),trailer=contentTyped.slice(-11),Ti.API.info("trailer: "+trailer),aTrailer.value=trailer}),Ti.App.addEventListener("missed_keypad_end",function(){alert("MISSED"),Ti.API.info("MISSED"),Ti.Media.vibrate()});